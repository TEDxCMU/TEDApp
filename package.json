{
    "name": "tedapp",
    "version": "2.0.0",
    "description": "TEDxCMU Mobile App",
    "homepage": "https://www.tedxcmu.app/",
    "engines": {
        "node": "12.x",
        "npm": "6.x"
    },
    "scripts": {
        "start": "next start",
        "dev": "next",
        "build": "next build",
        "predeploy": "npm run build",
        "lint": "eslint . --fix"
    },
    "dependencies": {
        "next": "^9.4.4",
        "prismic-javascript": "^3.0.0",
        "prismic-reactjs": "^1.3.1",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-ga": "^3.0.0",
        "styled-components": "^5.1.1"
    },
    "devDependencies": {
        "babel-eslint": "^10.1.0",
        "eslint": "^7.1.0",
        "eslint-plugin-react": "^7.20.0"
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended",
            "plugin:react/recommended"
        ],
        "env": {
            "browser": true,
            "node": true,
            "es6": true,
            "jest": true
        },
        "parser": "babel-eslint",
        "parserOptions": {
            "ecmaVersion": 2018,
            "sourceType": "module",
            "ecmaFeatures": {
                "jsx": true
            }
        },
        "plugins": [
            "react"
        ],
        "settings": {
            "react": {
                "version": "detect"
            }
        },
        "rules": {
            "block-spacing": "error",
            "brace-style": [
                "error",
                "1tbs",
                {
                    "allowSingleLine": true
                }
            ],
            "comma-dangle": [
                "error",
                "always-multiline"
            ],
            "comma-spacing": "error",
            "comma-style": "error",
            "curly": "error",
            "default-case": "error",
            "handle-callback-err": "error",
            "indent": "error",
            "jsx-quotes": "error",
            "no-console": "off",
            "no-empty-function": "error",
            "no-floating-decimal": "error",
            "no-inline-comments": "off",
            "no-lonely-if": "error",
            "no-multi-spaces": "error",
            "no-multiple-empty-lines": [
                "error",
                {
                    "max": 1,
                    "maxEOF": 1,
                    "maxBOF": 0
                }
            ],
            "no-trailing-spaces": "error",
            "object-curly-spacing": [
                "error",
                "always"
            ],
            "prefer-const": "error",
            "quotes": [
                "error",
                "single"
            ],
            "react/no-unescaped-entities": "off",
            "react/prop-types": "off",
            "react/react-in-jsx-scope": "off",
            "semi": "error",
            "space-before-blocks": "error",
            "space-before-function-paren": [
                "error",
                {
                    "anonymous": "never",
                    "named": "never",
                    "asyncArrow": "always"
                }
            ],
            "space-in-parens": "error",
            "space-infix-ops": "error",
            "space-unary-ops": [
                "error",
                {
                    "words": true,
                    "nonwords": false
                }
            ],
            "spaced-comment": "error",
            "yoda": "error",
            "eol-last": "error"
        }
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ]
}
